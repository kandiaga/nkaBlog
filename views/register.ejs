<!-- views/register.ejs -->
<!-- Include the haeder.ejs  -->
<%- include("partials/front/header") %>
<%- include("partials/front/top_menu") %>    
    <div class="container mt-4">
        <div class="row">
	<div class="col-md-9">		
  <h1>User Registration</h1>  
  <form action="/register" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="user_login" class="form-label">Username:</label>
        <input type="text" name="user_login" class="form-control" required>
        <div class="invalid-feedback">
            Please provide a username.
        </div>
    </div>
    
    <div class="mb-3">
        <label for="user_pass" class="form-label">Password:</label>
        <input type="password" name="user_pass" class="form-control" required>
        <div class="invalid-feedback">
            Please provide a password.
        </div>
    </div>
	
	<div class="mb-3">
        <label for="user_nicename" class="form-label">User Nicename:</label>
        <input type="text" name="user_nicename" class="form-control" required>
        <div class="invalid-feedback">
            Please provide a user nicename.
        </div>
    </div>
	
	<div class="mb-3">
        <label for="user_email" class="form-label">User Email:</label>
        <input type="email" name="user_email" class="form-control" required>
        <div class="invalid-feedback">
            Please provide a valid user email.
        </div>
    </div>
	
	<div class="mb-3">
        <label for="user_url" class="form-label">User URL:</label>
        <input type="url" name="user_url" class="form-control" required>
        <div class="invalid-feedback">
            Please provide a valid user URL.
        </div>
    </div>
	
	<div class="mb-3">
        <label for="display_name" class="form-label">Display Name:</label>
        <input type="text" name="display_name" class="form-control" required>
        <div class="invalid-feedback">
            Please provide a display name.
        </div>
    </div>
	
    <button type="submit" class="btn btn-primary">Register</button>
</form>

</div>
	
<!-- Include the admin haeder.ejs  -->
<%- include("partials/footer") %>	  