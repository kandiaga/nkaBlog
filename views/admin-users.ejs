<!-- Include the haeder.ejs  -->
<%- include("partials/header") %>
    <%- include("partials/admin_top_nav") %>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">                
				<%- include("partials/admin_nav") %>
            </div>
            <div class="col-md-9">			
                <h2>Users</h2>
				<a href="/add-user">Add New User</a>
				
        
				
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Full Name</th>
								<th>Email</th>
								<th>Action</th>
								<th></th>
                            </tr>
                        </thead>
                        <tbody>
						    <% for (const user of users) { %>	  
	                           <tr>
                                <td><%= user.id_user %></td>
                                <td><%= user.display_name %></td>
                                <td><%= user.user_nicename %></td>
								<td><%= user.user_email %></td>
								<td> <a  href="/edit-user/<%= user.id_user %>">Edit </a></td>
								<td> <a  href="/delete-user/<%= user.id_user %>">Delete </a></td>
                            </tr>
                             <% } %>                            
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
	
