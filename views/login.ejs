<!-- views/login.ejs -->
<!-- Include the haeder.ejs  -->
<%- include("partials/front/header") %>
<%- include("partials/front/top_menu") %>   
    <div class="container mt-4">
        <div class="row">
	<div class="col-md-9">	
  <h1>User Login</h1>
  <form action="/login" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="user_login" class="form-label">Username:</label>
        <input type="text" name="user_login" class="form-control" required>
        <div class="invalid-feedback">
            Please provide a username.
        </div>
    </div>
    
    <div class="mb-3">
        <label for="user_pass" class="form-label">Password:</label>
        <input type="password" name="user_pass" class="form-control" required>
        <div class="invalid-feedback">
            Please provide a password.
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary">Login</button>
</form>
  
  </div>
	
<!-- Include the admin haeder.ejs  -->
<%- include("partials/footer") %>	  